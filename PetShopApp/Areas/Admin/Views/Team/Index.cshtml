@using Core.Models;
@model List<Team>
@{
    int count = 1;
}
<div class="container">
    <h1>Teams</h1>
    <a class="btn btn-info" asp-action="Create" asp-controller="Team" >Create</a>

</div>
<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>

                    <th scope="col">FullName</th>
                    <th scope="col">Designation</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Id</td>
                        <td>@item.FullName</td>

                        <td>@item.Designation</td>
                        <td>
                            <img src="~/Uploads/Team/@item.ImgUrl" width="100" height="100" class="img-fluid" />
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-controller="Team" asp-route-id="@item.Id" >Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Team" asp-route-id="@item.Id">Delete</a>

                        </td>

                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>